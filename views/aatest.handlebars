<link rel="stylesheet" type="text/css" href="../../../../styles/style.css" />
<link rel="stylesheet" type="text/css" href="../../../../assets/fonts/font-awesome/css/font-awesome.min.css" />
<script src='../../../../script/alerts.js'></script>
<title>Tickets - LenoxBot</title>

<main>
    {{#if submitticketanswer}}
    <div class="alert alert-success alert-dismissible alert-savedsettings" id="success-alert" style="float:right;">
        <button type="button" class="close" data-dismiss="alert" aria-label="close" aria-hidden="true">&times;</button>
        <span class="text"></span>
        <strong>New tickets settings saved!</strong>
        <hr class="message-inner-separator">
        <p>
            We saved your new tickets settings for {{guilds.name}}</p>
    </div>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 lb-dashboard lb-mcsp">
                <div class="lb-bg-white rounded p-3">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <p class="h5">Ticket #{{ticket.ticketid}} | Status: {{ticket.status}}</p>
                            <div class="btn-group" role="group" aria-label="Status">
                                <form action="/tickets/{{ticket.ticketid}}/submitnewticketstatus" method="POST">
                                    <button type="submit" class="btn lb-btn-red" value="closed" name="newstatus">Close</button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            {{#if status}}
                            <form class="form-horizontal" action="/tickets/{{ticket.ticketid}}/submitticketanswer"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm-3" for="newticketanswer">New answer:</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" name="newticketanswer" rows="5"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Submit</button>
                                    </div>
                                </div>
                            </form>
                            <ul class="lb-timeline mt-5"></ul>
                            {{else}}
                            <ul class="lb-timeline">
                                {{/if}}
                                <li>
                                    <div class="timeline-heading">
                                        <h4 class="mb-0">{{ticket.author}}</h4>
                                        <small class="text-muted">
                                            <i class="mdi mdi-clock-outline"></i> {{ticket.newdate}}</small>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="py-4">{{ticket.content}}</p>
                                    </div>
                                </li>
                                {{#if answers}} {{#each answers}}
                                {{#if timelineconf}}
                                <li>
                                    <h4 class="mb-0">{{author}} (Support-Team)</h4>
                                    <small class="text-muted">
                                        <i class="mdi mdi-clock-outline"></i> {{newdate}}</small>
                                    <div class="timeline-body">
                                        <p class="py-4">{{content}}</p>
                                    </div>
                                </li>
                                {{else}}
                                <li>
                                    <h4 class="mb-0">{{author}}</h4>
                                    <small class="text-muted">
                                        <i class="mdi mdi-clock-outline"></i> {{newdate}}</small>
                                    <p class="py-4">{{content}}</p>
                                </li>
                                {{/if}}
                                {{/each}} {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>