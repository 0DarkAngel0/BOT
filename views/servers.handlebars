                {{/if}}
            </li>
        </ul>
		<div class="navbar" id="loginbutton">
        {{#if user}}
        <a href="logout" class="text text-size-normal navbar-button" style="color: black;">Log out</a>
        {{ else }}
        <a href="login" class="text text-size-normal navbar-button" style="color: black;">Log in</a>
        {{/if}}
    </div>
    </nav>
	</div>
</header>
<main class="selectserver">
	<section>
		<div class="container">
			<div class="row"> 
				{{#each guilds}}
				<div class="col-md-4 col-sm-6 col-xs-12">
					<figure>
						{{#if lenoxbot}}
						{{#if icon}}
						<a href="dashboard/{{id}}/overview">
						<img id="icon-selectserver" src="https://cdn.discordapp.com/icons/{{id}}/{{icon}}.jpg" height="120" width="120">
						</a>
						{{else}}
						<a href="dashboard/{{id}}/overview">
						<img id="icon-selectserver" src="discordicon.png" height="120" width="120">
						</a>
						{{/if}}
						{{else}}
						{{#if icon}}
						<a href="http://invite.lenoxbot.com">
						<img id="icon-selectserver" src="https://cdn.discordapp.com/icons/{{id}}/{{icon}}.jpg" height="120" width="120">
						</a>
						{{else}}
						<a href="http://invite.lenoxbot.com">
						<img id="icon-selectserver" src="discordicon.png" height="120" width="120">
						</a>
						{{/if}}
						{{/if}}
					</figure>
					<div class="text">
						<h3 class="text-white text text-size-normal" id="guildname-selectserver">{{name}}</h3>
						{{#if lenoxbot}}
						<h6 class="text text-white text-size-small" id="selectserver-membercount">{{memberscount}} members</h6>
						<a href="dashboard/{{id}}/overview">
						<p class="text text-white button btn-success" id="dashboard-button">Dashboard</p>
						</a>
						{{else}}
						<h6 class="text text-size-small" id="selectserver-membercount">Not using LenoxBot</h6>
						<a href="http://invite.lenoxbot.com" target="blanc">
						<p class="text text-white button btn-warning" id="getlenoxbot-button">Get LenoxBot!</p>
						</a>
						{{/if}}
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
</main>


    <footer>
        <nav class="footer-navigation">
            <p target="blank" class="text text-size-small text-white">&copy; LenoxBot
            </p>
            <a id="twitter" target="blank" class="text text-size-small text-white" href="https://twitter.com/lenoxbot">
                <i class="fa fa-twitter" aria-hidden="true"></i>
            </a>
        </nav>
    </footer>