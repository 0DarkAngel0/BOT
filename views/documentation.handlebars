<script src='script/newdocumentation.js'></script>
<title>Documentation - LenoxBot</title>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="https://lenoxbot.com" class="navbar-brand text">LenoxBot</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto" id="mainnavbar">
                <li class="nav-item">
                    <a href="home" class="h5 nav-link">Home</a>
                </li>
                <li class="nav-item active">
                    <a href="documentation" class=" h5 nav-link">Documentation</a>
                </li>
                <li class="nav-item">
                    <a href="/donate" class=" h5 nav-link">Donate
                        <span class="badge badge-info">NEW</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="https://medium.com/lenoxbot" target="blanc" class=" h5 nav-link">Blog

                    </a>
                </li>
                <li class="nav-item">
                    <a href="https://lenoxbot.com/invite" target="blanc" class=" h5 nav-link">Invite LenoxBot</a>
                </li>
                <li class="nav-item">
                    <a href="https://lenoxbot.com/discord" target="blanc" class=" h5 nav-link">Discord Server</a>
                </li>
                <li class="nav-item">
                    {{#if user}}
                    <a href="servers" class=" h5 nav-link">Dashboard

                    </a>
                    {{/if}}
                </li>
            </ul>
            <ul class="navbar-nav navbar-right" id="mainnavbar">
                <li class="nav-item">
                    {{#if user}}
                    <a href="logout" class=" h5 nav-link ">Log out</a>
                    {{ else }}
                    <a href="loginpressedbutton" class=" h5 nav-link ">Log in</a>
                    {{/if}}
                </li>
                <li class="avatarnavigation">
                    {{#if user}}
                    <a href="https://lenoxbot.com/servers">
                        <img class="img-fluid rounded profilepic-navbar nav-link img-thumbnail" src="https://cdn.discordapp.com/avatars/{{user.id}}/{{user.avatar}}.jpg"
                            height="30" width="50">
                    </a>
                    {{/if}}
                </li>
            </ul>
        </div>
    </nav>
    </div>
</header>
<main>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {{#if documentationmoderator}}
                <a href="/editdocumentation">
                    <button type="button" class="btn btn-warning btn-lg btn-block" style="margin-top: 50px;">Edit documentation entries</button>
                </a>
                <a href="/commands">
                    <button type="button" class="btn btn-primary btn-lg btn-block" style="margin-top: 10px;">Commandlist</button>
                </a>
                {{else}}
                <a href="/commands">
                    <button type="button" class="btn btn-primary btn-lg btn-block" style="margin-top: 50px;">Commandlist</button>
                </a>
                {{/if}}
                <div class="row" style="margin-top: 50px;">
                    <div class="col-sm-12">
                        <div class="input-group" style="margin-bottom: 10px;">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </div>
                            </div>
                            <input class="form-control" id="myInput" type="text" placeholder="Search for documentation entries...">
                        </div>
                    </div>
                </div>
                <p class="text display-4 text-white" style="margin-top: 20px; margin-bottom: 20px;">General FAQ</p>
                {{#each generalfaq}}
                <div class="card" style="margin-bottom: 30px;">
                    <div class="card-header">
                        <h5 class="text h3 documentation-entry">
                            {{title}}
                        </h5>
                    </div>
                    <div class="card-body" style="margin: 10px;">
                        {{{content}}}
                    </div>
                    <div class="card-footer">
                        <div class="text h4" style="color:rgb(94, 154, 233); font-size: 12px;">
                            <i class="far fa-clock"></i> Last updated: {{date}}
                            <br>
                            <i class="fas fa-user"></i> {{author}}
                            <br>
                            <i class="fas fa-tags"></i> {{tags}}
                        </div>
                    </div>
                </div>
                {{/each}}
                <br>
                <br>
                <br>
                <p class="text display-4 text-white" style="margin-top: 20px; margin-bottom: 20px;">Tutorials</p>
                {{#each tutorials}}
                <div class="card" style="margin-bottom: 30px;">
                    <div class="card-header">
                        <h5 class="text h3 documentation-entry">
                            {{title}}
                        </h5>
                    </div>
                    <div class="card-body" style="margin: 10px;">
                        {{{content}}}
                    </div>
                    <div class="card-footer">
                        <div class="text h4" style="color:rgb(94, 154, 233); font-size: 12px;">
                            <i class="far fa-clock"></i> Last updated: {{date}}
                            <br>
                            <i class="fas fa-user"></i> {{author}}
                            <br>
                            <i class="fas fa-tags"></i> {{tags}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>
<script>
    anchors.options.visible = 'always';
    anchors.add('.documentation-entry');
</script>