<link rel="stylesheet" type="text/css" href="../../styles/style.css" />
<link rel="stylesheet" type="text/css" href="../../assets/fonts/font-awesome/css/font-awesome.min.css" />
<header id="header">
	<div class="logo">
        <img src="../../lenoxbot.png" height="70" width="70" id="logoimg">
        <p class="text text-size-big text-white" id="logo">LenoxBot</p>
        </div>
	<nav class="navbar">
		<ul>
			<li>
				<a href="../../home" class="text text-size-normal text-white navbar-button">Home</a>
			</li>
			<li>
				<a href="../../documentation" class="text text-size-normal text-white navbar-button">Documentation</a>
			</li>
			<li>
                 <a href="https://medium.com/lenoxbot" target="blanc" class="text text-size-normal text-white navbar-button">Blog <span class="label label-info">NEW</span></a>
            </li>
			<li>
				<a href="http://invite.lenoxbot.com" target="blanc" class="text text-size-normal text-white navbar-button">Invite LenoxBot</a>
			</li>
			<li>
				<a href="http://discord.lenoxbot.com" target="blanc" class="text text-size-normal text-white navbar-button">Discord Server</a>
			</li>
			<li>
				{{#if user}}
				<a href="../../servers" class="text text-size-normal text-white navbar-button" id="active">Dashboard <span class="label label-danger">ALPHA</span></a>
				{{/if}}
			</li>
		</ul>
	</nav>
	<div class="navbar" id="loginbutton">
        {{#if user}}
        <a href="../../logout" class="text text-size-normal text-white navbar-button">Log out</a>
        {{ else }}
        <a href="../../login" class="text text-size-normal text-white navbar-button">Log in</a>
        {{/if}}
    </div>
	</div>
</header>

<main>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="text text-white text-size-caption" id="guildsname-dashboard">
					<h1 style="width: 500%;">{{guilds.name}}</h1>
				</div>
				<div class="btn-group-vertical btn-group buttongroup-dashboard">
					<a href="/dashboard/{{guilds.id}}/overview" class="btn btn-primary text-size-normal button-dashboard active" role="button">Overview</a>
					<a href="/dashboard/{{guilds.id}}/generalsettings" class="btn btn-primary text-size-normal button-dashboard" role="button">General Settings</a>
					<a href="/dashboard/{{guilds.id}}/logs" class="btn btn-primary text-size-normal button-dashboard" role="button">Logssettings</a>
					<a href="/dashboard/{{guilds.id}}/modules" class="btn btn-primary text-size-normal button-dashboard" role="button">Modules</a>
					<a href="#" class="btn btn-primary text-size-normal button-dashboard" role="button">Tickets <span class="label label-danger">INCOMING</span></a>
				</div>
			</div>
			<div class="panel-group panel-group-dashboard">
				<div class="panel panel-primary panel-dashboard">
					<div class="panel-heading">
						<p class="text text-white text-size-big">Welcome {{user.username}},</p>
					</div>
					<div class="panel-body">
						<p class="text text-size-normal">Owner: {{guilds.ownertag}}</p>
						<p class="text text-size-normal">Members: {{guilds.memberscount}} ({{guilds.membersonline}} online, {{guilds.membersidle}} idle, {{guilds.membersdnd}}
							DND, {{guilds.membersoffline}} offline)</p>
						<p class="text text-size-normal">Channels: {{guilds.channelscount}} </p>
						<p class="text text-size-normal">Roles: {{guilds.rolescount}}</p>
					</div>
				</div>
				<div class="panel panel-primary panel-dashboard">
					<div class="panel-heading">
						<p class="text text-white text-size-normal">Last logs:</p>
					</div>
					<div class="panel-body">
						<table class="table table-bordered">
							<!-- Header of logs -->
							<tr>
								<th class="text text-size-normal text-black">Action</th>
								<th class="text text-size-normal text-black">Executor</th>
								<th class="text text-size-normal text-black">Date</th>
							</tr>
							<!-- Header of logs -->
							{{#if logs}}
							{{#each logs}}
							<tr>
								<td class="text text-size-small text-black">{{action}}</td>
								<td class="text text-size-small text-black">{{username}}</td>
								<td class="text text-size-small text-black">{{showeddate}}</td>
							</tr>
							{{/each}}
							{{else}}
							<tr>
								<td class="text text-size-small text-black">None</td>
								<td class="text text-size-small text-black">None</td>
								<td class="text text-size-small text-black">None</td>
							</tr>
							{{/if}}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>


<footer>
	<nav class="footer-navigation">
		<a target="blank" class="text text-size-small text-white" href="http://lenoxbot.com">&copy; LenoxBot
		</a>
		<a id="twitter" target="blank" class="text text-size-small text-white" href="https://twitter.com/lenoxbot">
			<i class="fa fa-twitter" aria-hidden="true"></i>
		</a>
	</nav>
</footer>