<main>
    {{#if submitapplication}}
    <div class="alert alert-success alert-dismissible alert-savedsettings" id="success-alert" style="width: 500px; float:right;">
        <button type="button" class="close" data-dismiss="alert" aria-label="close" aria-hidden="true">&times;</button>
        <span class="text"></span>
        <strong>New application settings saved!</strong>
        <hr class="message-inner-separator">
        <p>
            We saved your new application settings for {{guilds.name}}</p>
    </div>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="text text-white text-size-caption" id="guildsname-dashboard">
                    <h1 class="guildsname-dashboard">{{guilds.name}}</h1>
                </div>
                <div class="btn-group-vertical btn-group buttongroup-dashboard">
                    <a href="/dashboard/{{guilds.id}}/overview" class="btn btn-primary text-size-normal button-dashboard" role="button">Overview</a>
                    <a href="/dashboard/{{guilds.id}}/generalsettings" class="btn btn-primary text-size-normal button-dashboard" role="button">General Settings</a>
                    <a href="/dashboard/{{guilds.id}}/logs" class="btn btn-primary text-size-normal button-dashboard" role="button">Logssettings</a>
                    <a href="/dashboard/{{guilds.id}}/modules" class="btn btn-primary text-size-normal button-dashboard" role="button">Modules</a>
                    <a href="/dashboard/{{guilds.id}}/chatfilter" class="btn btn-primary text-size-normal button-dashboard" role="button">Chatfilter</a>
					<a href="/dashboard/{{guilds.id}}/music" class="btn btn-primary text-size-normal button-dashboard" role="button">Music</a>
                    <a href="/dashboard/{{guilds.id}}/application" class="btn btn-primary text-size-normal button-dashboard active" role="button">Application</a>
                    <a href="#" class="btn btn-primary text-size-normal button-dashboard" role="button">Tickets
                        <span class="label label-danger">INCOMING</span>
                    </a>
                </div>
            </div>
            <div class="panel-group-dashboard">
                <div class="panel-group">
           <div class="panel panel-primary panel-dashboard" style="max-height: 200px;">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Application</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-vertical" action="/dashboard/{{guilds.id}}/application/submitapplication" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newapplication">Toggle Application</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker" name="newapplication" data-actions-box="true" data-size="7">
                                        <option value="true">Activate the application system</option>
                                        <option value="false">Deactivate the application system</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Votechannel</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitvotechannel" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newvotechannel">Set Votingchannel:</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker selectpicker" name="newvotechannel" data-live-search="true" title="Choose votechannel" data-actions-box="true" data-size="7">
                                        {{#each channels}}
                                        {{#if votechannelset}}
                                        <option value="{{name}}" selected>{{name}}</option>
                                        {{else}}
                                        <option value="{{name}}">{{name}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                 <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Archive</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitarchive" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newarchive">Toggle Archive:</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker" name="newarchive" data-actions-box="true" data-size="7">
                                        <option value="true">Activate archive</option>
                                        <option value="false">Deactivate archive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Archive channel</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitarchivechannel" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newarchivechannel">Set Archive channel:</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker selectpicker" name="newarchivechannel" data-live-search="true" title="Choose votechannel" data-actions-box="true" data-size="7">
                                        {{#each channels}}
                                        {{#if archivechannelset}}
                                        <option value="{{name}}" selected>{{name}}</option>
                                        {{else}}
                                        <option value="{{name}}">{{name}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Reactionnumber (Needed reactions to accept or reject an application)</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-vertical" action="/dashboard/{{guilds.id}}/application/submitreactionnumber" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newreactionnumber">New reactionnumber:</label>
                                <div class="col-sm-4">
                                    <input type="number" class="form-control" min="1" name="newreactionnumber" pattern=".{1,}" required value="{{guilds.reactionnumber}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10" style="margin-top: 20px;">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Role for accepeted canidates</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitrole" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newrole">Select a role:</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker selectpicker" name="newrole" data-live-search="true" title="Choose role" data-actions-box="true" data-size="7">
                                        {{#each roles}}
                                        {{#if roleset}}
                                        <option value="{{name}}" selected>{{name}}</option>
                                        {{else}}
                                        <option value="{{name}}">{{name}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Role for rejected canidates</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitdenyrole" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newdenyrole">Select a role:</label>
                                <div class="col-sm-4">
                                    <select required class="form-control custom-select custom-select-lg mb-3 selectpicker selectpicker" name="newdenyrole" data-live-search="true" title="Choose role" data-actions-box="true" data-size="7">
                                        {{#each roles}}
                                        {{#if denyroleset}}
                                        <option value="{{name}}" selected>{{name}}</option>
                                        {{else}}
                                        <option value="{{name}}">{{name}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
                </div>
        </div>
    </div>
</main>

