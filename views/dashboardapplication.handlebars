<link rel="stylesheet" type="text/css" href="../../styles/style.css" />
<link rel="stylesheet" type="text/css" href="../../assets/fonts/font-awesome/css/font-awesome.min.css" />
<script src='../../script/alerts.js'></script>
<title>Dashboard - LenoxBot</title>
<main>
    {{#if submitapplication}}
    <div class="alert alert-success alert-dismissible alert-savedsettings" id="success-alert" style="float:right;">
        <button type="button" class="close" data-dismiss="alert" aria-label="close" aria-hidden="true">&times;</button>
        <span class="text"></span>
        <strong>New application settings saved!</strong>
        <hr class="message-inner-separator">
        <p>
            We saved your new application settings for {{guilds.name}}</p>
    </div>
    {{/if}}
    <div class="container-fluid">
        <div class="row">
            {{> nav-dashboard}}
            <div class="col-sm-10 lb-dashboard lb-mcsp">
                <div class="lb-bg-white rounded p-3">
                    <a href="/dashboard/{{guilds.id}}/applications" class="btn lb-btn-green btn-lg btn-block">Show all
                        applications</a>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Application</h5>
                        </div>
                        <div class="card-body">
                            <form class="form-vertical" action="/dashboard/{{guilds.id}}/application/submitapplication"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newapplication">Toggle Application</label>
                                    <div class="col-sm-4">
                                        <select required class="form-control custom-select custom-select-lg mb-3 selectpicker"
                                            name="newapplication" data-actions-box="true" data-size="7">
                                            <option value="true">Activate the application system</option>
                                            <option value="false">Deactivate the application system</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Reactionnumbeh5 (Needed reactions to accept or reject an
                                application)</p>
                        </div>
                        <div class="card-body">
                            <form class="form-vertical" action="/dashboard/{{guilds.id}}/application/submitreactionnumber"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newreactionnumber">New reactionnumber:</label>
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" min="1" name="newreactionnumber"
                                            pattern=".{1,}" required value="{{guilds.reactionnumber}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10" style="margin-top: 20px;">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Role for acceh5eted canidates</p>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitrole"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newrole">Select a role:</label>
                                    <div class="col-sm-4">
                                        <select required class="form-control custom-select custom-select-lg mb-3 selectpicker"
                                            name="newrole" data-live-search="true" title="Choose role" data-actions-box="true"
                                            data-size="7">
                                            <option value="false">No role!</option>
                                            {{#each roles}} {{#if roleset}}
                                            <option value="{{id}}" selected>#{{name}}</option>
                                            {{else}}
                                            <option value="{{id}}">#{{name}}</option>
                                            {{/if}} {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Role for rejeh5ted canidates</p>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitdenyrole"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newdenyrole">Select a role:</label>
                                    <div class="col-sm-4">
                                        <select required class="form-control custom-select custom-select-lg mb-3 selectpicker"
                                            name="newdenyrole" data-live-search="true" title="Choose role"
                                            data-actions-box="true" data-size="7">
                                            <option value="false">No role!</option>
                                            {{#each roles}} {{#if denyroleset}}
                                            <option value="{{id}}" selected>#{{name}}</option>
                                            {{else}}
                                            <option value="{{id}}">#{{name}}</option>
                                            {{/if}} {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Message for ah5cepted applicants</p>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitnewacceptedmsg"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newacceptedmsg">New message:</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control" name="newacceptedmsg" rows="3">{{guilds.acceptedmessage}}</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Message for rh5jected applicants</p>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" action="/dashboard/{{guilds.id}}/application/submitnewrejectedmsg"
                                method="POST">
                                <div class="form-group">
                                    <label class="control-label col-sm" for="newrejectedmsg">New message:</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control" name="newrejectedmsg" rows="3">{{guilds.rejectedmessage}}</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="submit" class="btn lb-btn-green">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card mt-3 shadow-sm">
                        <div class="card-header">
                            <h5>Commands</p>
                                h5
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table" style="width: 100%;">
                                    <tbody>
                                        {{#each commands}}
                                        <tr>
                                            <td>
                                                <div class="col-sm-8">
                                                    <h5 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
                                                        <strong>{{help.name}}</strong>
                                                    </h5>
                                                    <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px; margin: 0; padding: 0;">{{help.description}}</p>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group" style="float:right; margin-right: 5px;">
                                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                                        data-target="#{{help.name}}" style="margin-right: 8px;">
                                                        Edit
                                                    </button>
                                                    <div class="modal fade" id="{{help.name}}" tabindex="-1" role="dialog"
                                                        aria-labelledby="{{help.name}}Title" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLongTitle">Settings
                                                                        of {{help.name}} command</h5>
                                                                    <button type="button" class="close" data-dismiss="modal"
                                                                        aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>

                                                                <form class="form-inline" action="/dashboard/{{../guilds.id}}/application/{{help.name}}/submitcommandchange"
                                                                    method="POST">
                                                                    <div class="modal-body">
                                                                        <div class="form-group mb-2">
                                                                            <label for="newblacklistedchannels">Blacklisted
                                                                                channels:</label>
                                                                        </div>
                                                                        <div class="form-group mx-sm-3 mb-2 col-sm-6">
                                                                            <select class="selectpicker" name="newblacklistedchannels"
                                                                                data-live-search="true" multiple title="Choose channel(s)"
                                                                                data-actions-box="true" data-size="7">
                                                                                {{#each ../channels}} {{#inArray
                                                                                ../bannedchannels id}}
                                                                                <option value="{{id}}" selected>#{{name}}</option>
                                                                                {{else}}
                                                                                <option value="{{id}}">#{{name}}</option>
                                                                                {{/inArray}} {{/each}}
                                                                            </select>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="form-group mb-2">
                                                                            <label for="newwhitelistedroles">Whitelisted
                                                                                roles:</label>
                                                                        </div>
                                                                        <div class="form-group mx-sm-3 mb-2 col-sm-6">
                                                                            <select class="selectpicker" name="newwhitelistedroles"
                                                                                data-live-search="true" multiple title="Choose roles(s)"
                                                                                data-actions-box="true" data-size="7">
                                                                                {{#each ../roles}} {{#inArray
                                                                                ../whitelistedroles id}}
                                                                                <option value="{{id}}" selected>@{{name}}</option>
                                                                                {{else}}
                                                                                <option value="{{id}}">@{{name}}</option>
                                                                                {{/inArray}} {{/each}}
                                                                            </select>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="form-group mb-2">
                                                                            <label for="newblacklistedroles">Blacklisted
                                                                                roles:</label>
                                                                        </div>
                                                                        <div class="form-group mx-sm-3 mb-2 col-sm-6">
                                                                            <select class="selectpicker" name="newblacklistedroles"
                                                                                data-live-search="true" multiple title="Choose roles(s)"
                                                                                data-actions-box="true" data-size="7">
                                                                                {{#each ../roles}} {{#inArray
                                                                                ../bannedroles id}}
                                                                                <option value="{{id}}" selected>@{{name}}</option>
                                                                                {{else}}
                                                                                <option value="{{id}}">@{{name}}</option>
                                                                                {{/inArray}} {{/each}}
                                                                            </select>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="form-group mb-2">
                                                                            <label for="newcooldown">Cooldown (in
                                                                                seconds):</label>
                                                                        </div>
                                                                        <div class="form-group mx-sm-3 mb-2 col-sm-6">
                                                                            <input type="number" min="3" max="600"
                                                                                class="form-control" name="newcooldown"
                                                                                required value="{{cooldown}}">
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-dismiss="modal">Close</button>
                                                                        <button type="submit" class="btn btn-primary">Save
                                                                            changes</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {{#if conf.enabled}}
                                                    <form action="/dashboard/{{../guilds.id}}/application/{{help.name}}/submitcommandstatuschange"
                                                        method="POST">
                                                        <button type="submit" class="btn btn-danger" value="false" name="statuschange">
                                                            Disable
                                                        </button>
                                                    </form>
                                                    {{else}}
                                                    <form action="/dashboard/{{../guilds.id}}/application/{{help.name}}/submitcommandstatuschange"
                                                        method="POST">
                                                        <button type="submit" class="btn btn-success" value="true" name="statuschange">
                                                            Enable
                                                        </button>
                                                    </form>
                                                    {{/if}}
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>