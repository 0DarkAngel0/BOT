<main>
    {{#if submitchatfilter}}
    <div class="alert alert-success alert-dismissible alert-savedsettings" id="success-alert" style="width: 500px; float:right;">
        <button type="button" class="close" data-dismiss="alert" aria-label="close" aria-hidden="true">&times;</button>
        <span class="text"></span>
        <strong>New chatfilter settings saved!</strong>
        <hr class="message-inner-separator">
        <p>
            We saved your new chatfilter settings for {{guilds.name}}</p>
    </div>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="text text-white text-size-caption" id="guildsname-dashboard">
                    <h1 class="guildsname-dashboard">{{guilds.name}}</h1>
                </div>
                <div class="btn-group-vertical btn-group buttongroup-dashboard">
                    <a href="/dashboard/{{guilds.id}}/overview" class="btn btn-primary text-size-normal button-dashboard" role="button">Overview</a>
                    <a href="/dashboard/{{guilds.id}}/generalsettings" class="btn btn-primary text-size-normal button-dashboard" role="button">General Settings</a>
                    <a href="/dashboard/{{guilds.id}}/logs" class="btn btn-primary text-size-normal button-dashboard" role="button">Logssettings</a>
                    <a href="/dashboard/{{guilds.id}}/modules" class="btn btn-primary text-size-normal button-dashboard" role="button">Modules</a>
                    <a href="/dashboard/{{guilds.id}}/chatfilter" class="btn btn-primary text-size-normal button-dashboard active" role="button">Chatfilter</a>
					<a href="/dashboard/{{guilds.id}}/music" class="btn btn-primary text-size-normal button-dashboard" role="button">Music</a>
                    <a href="#" class="btn btn-primary text-size-normal button-dashboard" role="button">Tickets
                        <span class="label label-danger">INCOMING</span>
                    </a>
                </div>
            </div>
            <div class="panel-group-dashboard">
                <div class="panel-group">
                    <div class="panel panel-primary panel-dashboard">
                    <div class="panel-heading">
                        <p class="text text-white text-size-normal">Chatfilter entries</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="/dashboard/{{guilds.id}}/chatfilter/submitchatfilterarray" method="POST">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="newchatfilterarray">Change chatfilter entries:</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" required name="newchatfilterarray" rows="20" pattern="^\S+$">{{chatfilterarray}}</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</main>

